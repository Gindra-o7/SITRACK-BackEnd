{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext", // Atur ini sesuai kebutuhan, bisa "CommonJS" untuk CommonJS
    "outDir": "./dist", // Output direktori
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": false,
    "noEmit": false,

    "allowSyntheticDefaultImports": true,

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["index.ts", "src/**/*"], // Pastikan semua file TypeScript disertakan
  "exclude": ["node_modules"] // Jangan sertakan node_modules
}
